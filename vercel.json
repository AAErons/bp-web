{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node@2.15.8"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/galleries",
      "dest": "/api/galleries/index.ts"
    },
    {
      "src": "/api/galleries/(.*)",
      "dest": "/api/galleries/[id].ts"
    },
    {
      "src": "/api/upload",
      "dest": "/api/upload.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_VERSION": "18.x"
  }
} 